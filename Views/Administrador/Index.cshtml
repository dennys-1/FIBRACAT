@model IEnumerable<FIBRACAT.Models.Administrador>

@{
     ViewData["Title"] = "Administrador";
}

<h4>DATOS CLIENTE</h4>
<hr />


<table class="table table-sm">
    <thead class="thead-dark">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CORREO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TELEFONO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DIRECCION)
            </th>
            <th>
                <a asp-action="AddOrEdit" class="btn btn-success btn-sm"></i> CLIENTE</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.CORREO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TELEFONO)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DIRECCION)
            </td>
            <td>
               
                <a asp-action="AddOrEdit" asp-route-id="@item.CID"><i  class="btn btn-primary btn-sm" role="button" aria-pressed="true">Editar</i></a>
                <a asp-action="Delete" asp-route-id="@item.CID" class="" onclick="return confirm('¿ESTAS SEGURO?')"><i  class="btn btn-danger btn-sm" role="button" aria-pressed="true">Eliminar</i></a>
            </td>
        </tr>
}
    </tbody>
</table>
