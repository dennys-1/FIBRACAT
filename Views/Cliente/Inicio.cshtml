.product {
  position: relative;
  margin: 15px 0px;
  transition: 0.2s all;
}

.product:hover {
  box-shadow: 0px 0px 6px 0px #F3753A;
}

.product .product-img {
  position: relative;
}

.product .product-img>img {
  width: 100%;
}

.product .product-body {
  position: relative;
  padding: 15px;
  background-color: #FFF;
  text-align: center;
  z-index: 20;
}

.product .product-body .product-category {
  text-transform: uppercase;
  font-size: 12px;
  color: #8D99AE;
}

.product .product-body .product-name {
  text-transform: uppercase;
  font-size: 14px;
}

.product .product-body .product-name>a {
  font-weight: 700;
}

.product .product-body .product-price {
  color: #D10024;
  font-size: 16px;
}

.product .product-body .product-btns>button {
  position: relative;
  width: 40px;
  height: 40px;
  background: transparent;
  border: none;
}

.product .product-body .product-btns>button:hover {
  background-color: #333333;
  color: #F3753A;
  border-radius: 50%;
}


.contacto {
  text-align: center;
  background: rgba(248,80,50,1);  
  background: -webkit-linear-gradient(left, rgba(248, 80, 20, 1), rgba(210, 150, 80, 1) 100%);
  background: -moz-linear-gradient(left, rgba(248, 80, 20, 1) 0%, rgba(210, 150, 80, 1) 100%);
  padding-bottom: 10%;

}

.contacto ul.list-social li a {
  font-size: 2em;
  line-height: 3em;
  display: block;
  width: 3em;
  height: 3em;
  color: #ffffff;
  border-radius: 100%;
}

.contacto ul.list-social li a:hover{
  color: rgb(0, 99, 167);
}


.contacto form{
  width: 28.125em;
  margin: auto;
  background: rgba(0, 0, 0, 0.4);
  padding: 0.625em  1.25em;
  box-sizing: border-box;
  margin-top:  1.25em;
  border-radius: 10px;
}

.contacto input, textarea{
  width: 100%;
  margin-bottom: 1.25em;
  padding: 0.625em;
  box-sizing: border-box;
  font-size: 1.13em;
}
.contacto textarea{
  min-height: 6.25em;
  max-height: 12em;
  max-width: 100%;
}

.contacto h3
{
  color: white;
  padding-top: 10%;
  padding-bottom: 10%;
}

.contacto h2
{
   color: white;
   padding-top: 5%;
   padding-bottom: 5%;
}

#btnEnviar{
    color: #ffffff;
